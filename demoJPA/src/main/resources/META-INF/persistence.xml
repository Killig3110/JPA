<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

  <persistence-unit name="dataSource">
    <class>thanhdi.demo.demojpa.entities.Role</class>
    <class>thanhdi.demo.demojpa.entities.User</class>
    <class>thanhdi.demo.demojpa.entities.Category</class>
    <class>thanhdi.demo.demojpa.entities.Video</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:mysql://localhost:3306/jpademo?createDatabaseIfNotExist=true"/>
      <property name="jakarta.persistence.jdbc.driver"
                value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="1234"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>